<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hololibs.easyuae">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PayParkActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SendCreditActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".HotlinesActivity"
            android:label="@string/chooseGroup_txt"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hololibs.easyuae.MainActivity" />
        </activity>
        <activity
            android:name=".HotlineDetailsActivity"
            android:label="@string/title_activity_hotline_details"
            android:parentActivityName=".HotlineDetailsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hololibs.easyuae.HotlineDetailsActivity" />
        </activity>
    </application>

</manifest>
